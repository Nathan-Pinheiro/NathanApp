<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NathanApp.Views.MovieDetails">

    <FlexLayout Direction="Column" AlignItems="Center">
        <Label x:Name="Title" FontAttributes="Bold" />
        <Label x:Name="Date" FontAttributes="Italic" />
        <Image x:Name="Poster" Aspect="AspectFit" HeightRequest="280" WidthRequest="150" />
        <Label x:Name="Overview" HorizontalTextAlignment="Center" Margin="10"/>
    </FlexLayout>

</ContentPage>
